{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["es2022"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
       "@/*": ["src/*"],                
      },
    //"types": ["node", "@playwright/test"],
  },
  "include": [
    "src/**/*",
    "tests/**/*",
    "playwright.config.ts"
  ]
  // "include": [
  //   "./playwright.config.ts",
  //   "./tests/**/*",
  //   "./fixtures/**/*",
  //   "./**/*.ts"
  // ]
}